extend type Query {
  listProjects(first: Int, after: String): ProjectConnection! @isAuthenticated
  projectDetails(id: ID!): Project @isAuthenticated
}

type ProjectConnection {
  nodes: [Project!]!
  pageInfo: PageInfo!
  totalCount: Int!
}

type Project {
  id: ID!
  name: String!
  ref: String!
  services: [Service!]! @goField(forceResolver: true)
  createdAt: Time!
  updatedAt: Time!
}
